<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="by.dao.RaceDao">

    <select id="getRaces" resultType="by.entity.Race">
        select
            id,
            race
        from race
    </select>

    <select id="getRace" resultType="by.entity.Race">
        select
            id,
            race
        from race
        where race.id = #{id}
    </select>

    <update id="update" parameterType="by.entity.Race">
        UPDATE race
        SET
            race = #{race}
        WHERE ID = #{id}
    </update>

</mapper>